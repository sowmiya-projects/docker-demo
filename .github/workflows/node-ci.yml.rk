name: Node Docker CI

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Build Docker image
        run: docker build -t node-app .
     
      - name: Run container
        run: docker run -d -p 3000:3000 node-app

      - name: Check container
        run: docker ps

